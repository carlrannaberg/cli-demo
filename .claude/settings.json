{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_WORKSPACE}/.claude/hooks/full-check.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "file_paths": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_WORKSPACE}/.claude/hooks/run-related-tests.sh"
          }
        ]
      }
    ]
  }
}